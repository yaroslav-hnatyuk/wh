    <section class="probootstrap-section probootstrap-bg-white" data-section="welcome" style="min-height: 610px">
      <div class="container" style="padding-top: 70px;">
        <div class="row">
            
            <div class="col-md-9 text-left" style="padding-left: 0">
                <input id="add-user" name="add_user" value="Додати користувача" class="btn btn-primary" type="button">
            </div>
            <div class="col-md-3 text-right" style="padding-right: 0">
                <a href="/users" id="cancel-changes" class="btn" type="button" style="border: 1px solid #ccc; color: rgba(0, 0, 0, 0.7)">Відмінити</a>
                <input id="save-users" name="save_users" value="Зберегти" class="btn btn-primary" type="button">
            </div>
            
            <br/><br/><br/>

            <table class="table wh-table" style="cursor: pointer; width: 100%; margin: 0px">
