                <th>Телефон</th>
                <th>Компанія</th>
                <th>Офіс</th>
              </tr>
            {% for user in users %}
              <tr data-user-id={{ user.user_id }}>
                <th>{{ user.user_name }}</th>
                <th>{{ user.role }}</th>
                <th><input type="text" value="{{ user.email }}" /></th>
                <th>{{ user.phone }}</th>
                <th>{{ user.company_name ?? ' - ' }}</th>
                <th>{{ user.office_addr ?? ' - ' }}</th>
              </tr>
            {% endfor %}
            </table>
            <hr class="bottom-table-border"/>
        </div>
